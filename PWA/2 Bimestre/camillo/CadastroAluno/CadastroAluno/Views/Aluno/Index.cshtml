@model IEnumerable<CadastroAluno.Models.Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<h1>Cadastro de Alunos</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>
@if (@TempData["AlunoMensagem"] != null)
{
    <p class="alert alert-primary">
        @TempData["AlunoMensagem"]
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Consultar", "Details", new { id=item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
